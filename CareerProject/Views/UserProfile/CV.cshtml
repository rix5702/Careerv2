
@{
    ViewBag.Title = "CV";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="container" style="border: 1px #808080 solid; margin-bottom: 200px">

    <div>
        <h1>Add New CV</h1>
        <form action="@Url.Action("UploadCV", "UserProfile")" method="POST" class="cs-form" enctype="multipart/form-data">

            <input type="file" id="cvFile" name="cvFile" />
            <div class="mt-5 text-center"><input class="btn btn-primary profile-button" type="submit" value="Save CV" /></div>
        </form>
    </div>
    <h1>List of CV</h1>

    <!-- Table to show the list of PDF files -->
    <table>
        <thead>
            <tr>
                <th>Creation Date</th>
                <th>File Name</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.listCV)
            {
                <tr>
                    <td>@item.CreationDate</td>
                    <td>@item.FileCV</td>
                    <td><a href="~/CV/@item.FileCV" target="_blank">View</a></td>
                </tr>
            }


        </tbody>
    </table>
</div>
<style type="text/css">


    h1 {
        font-size: 24px;
        margin-bottom: 20px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        background-color: white;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    th, td {
        padding: 15px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: #4CAF50;
        color: white;
    }

    tr:hover {
        background-color: #f5f5f5;
    }

    a {
        text-decoration: none;
        color: #0275d8;
    }

        a:hover {
            text-decoration: underline;
        }
</style>