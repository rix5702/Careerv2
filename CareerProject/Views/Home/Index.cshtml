
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main>

    <!-- slider Area Start-->
    <div class="slider-area ">
        <!-- Mobile Menu -->
        <div class="slider-active">
            <div class="single-slider slider-height d-flex align-items-center" data-background="../Assets/img/hero/h1_hero.jpg">
                <div class="container">
                    <div class="row">
                        <div class="col-xl-6 col-lg-9 col-md-10">
                            <div class="hero__caption">
                                <h1>Find the most exciting startup jobs</h1>
                            </div>
                        </div>
                    </div>
                    <!-- Search Box -->
                    <div class="row">
                        <div class="col-xl-8">
                            <!-- form -->
                            <form action="@Url.Action("Index", "Job")" class="search-box">
                                <div class="input-form">
                                    <input type="text" style="border: 1px #808080 solid" id="search" name="search" placeholder="Job Tittle or keyword">
                                    <button class="btn-info" type="submit">Find job</button>
                                </div>
                            </form>
                            <!-- form -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- slider Area End-->
    <!-- Our Services Start -->
    <div class="our-services section-pad-t30">
        <div class="container">
            <!-- Section Tittle -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-tittle text-center">
                        <span>FEATURED TOURS Packages</span>
                        <h2>Browse Top Categories </h2>
                    </div>
                </div>
            </div>
            <div class="row d-flex justify-contnet-center">
                @foreach (var item in ViewBag.categories)
                {
                    <div class="col-xl-3 col-lg-3 col-md-4 col-sm-6">
                        <div class="single-services text-center mb-30">
                            <div class="services-ion">
                                <img src="~/Img/@item.image" style="width:100px; height:100px" />
                            </div>
                            <div class="services-cap">
                                <h5><a href="@Url.Action("Index", "Job", new {search = item.Name })">@item.Name</a></h5>
                                @*<span>(653)</span>*@
                            </div>
                        </div>
                    </div>
                }


            </div>
            <!-- More Btn -->
            <!-- Section Button -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="browse-btn2 text-center mt-50">
                        <a href="@Url.Action("Index", "Job")" class="border-btn2">Browse All Sectors</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Our Services End -->
    <!-- Online CV Area Start -->

    <!-- Online CV Area End-->
    <!-- Featured_job_start -->
    <section class="featured-job-area feature-padding">
        <div class="container">
            <!-- Section Tittle -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-tittle text-center">
                        <span>Recent Job</span>
                        <h2>Featured Jobs</h2>
                    </div>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-xl-10">
                    <!-- single-job-content -->
                    @foreach (var item in ViewBag.jobs)
                    {
                       
                        <div class="single-job-items mb-30" style="border:1px #808080 solid">
                            <div class="job-items">
                                <div class="company-img">
                                    <a href="@Url.Action("JobDetail", "Job", new {id = item.ID})"><img style="width:70px; height: 70px" src="~/Img/@item.tbl_Company.Avt" alt=""></a>
                                </div>
                                <div class="job-tittle">
                                    <a href="@Url.Action("JobDetail", "Job", new {id = item.ID})"><h4>@item.Name</h4></a>
                                    <ul>
                                        <li>@item.tbl_Company.Name</li>
                                        <li><i class="fas fa-map-marker-alt"></i>@item.Location</li>
                                        <li>@item.Offer </li>
                                    </ul>
                                </div>
                            </div>
                            <div class="items-link f-right">
                                <a href="@Url.Action("JobDetail", "Job", new {id = item.ID})">@item.Type</a>
                                <span>@item.CreationDate.Date.ToString("dd/MM/yyyy")</span>
                            </div>
                        </div>

                    }

                </div>
            </div>
        </div>
    </section>
    <!-- Featured_job_end -->
    <!-- How  Apply Process Start-->
    <div class="apply-process-area apply-bg pt-150 pb-150" data-background="~/Assets/img/gallery/how-applybg.png">
