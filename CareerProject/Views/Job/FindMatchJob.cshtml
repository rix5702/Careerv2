
@{
    ViewBag.Title = "FindMatchJob";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main>

    <!-- Hero Area Start-->
    <div class="slider-area ">
        <div class="single-slider section-overly slider-height2 d-flex align-items-center" data-background="../Assets/img/hero/about.jpg">
            <div class="container">
                <div class="row">
                    <div class="col-xl-12">
                        <div class="hero-cap text-center">
                            <h2>Get your job</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Hero Area End -->
    <!-- Job List Area Start -->
    <div class="job-listing-area pt-120 pb-120">
        <div class="container">
            <div class="row">
                <!-- Left content -->
                <div class="col-xl-3 col-lg-3 col-md-4">
                    <div class="row">
                        <div class="col-12">
                            <div class="small-section-tittle2 mb-45">
                                <div class="ion">
                                    <svg xmlns="http://www.w3.org/2000/svg"
                                         xmlns:xlink="http://www.w3.org/1999/xlink"
                                         width="20px" height="12px">
                                        <path fill-rule="evenodd" fill="rgb(27, 207, 107)"
                                              d="M7.778,12.000 L12.222,12.000 L12.222,10.000 L7.778,10.000 L7.778,12.000 ZM-0.000,-0.000 L-0.000,2.000 L20.000,2.000 L20.000,-0.000 L-0.000,-0.000 ZM3.333,7.000 L16.667,7.000 L16.667,5.000 L3.333,5.000 L3.333,7.000 Z" />
                                    </svg>
                                </div>
                                <h4>Filter Jobs</h4>
                            </div>
                        </div>
                    </div>
                    <!-- Job Category Listing start -->
                    <div class="job-category-listing mb-50">
                        <!-- single three -->
                        <div class="single-listing">
                            <!-- Range Slider Start -->
                            <div class="single-listing">


                                <!--  Select job items End-->
                                <!-- select-Categories start -->
                                <div class="select-Categories pt-80 pb-50">
                                    <div class="small-section-tittle2">
                                        <h4>Salary</h4>
                                    </div>
                                    <label class="container">
                                        < 10000000
                                        <input type="checkbox" class="salary-checkbox" value="below-10000000">
                                        <span class="checkmark"></span>
                                    </label>
                                    <label class="container">
                                        10000000 - 20000000
                                        <input type="checkbox" class="salary-checkbox" value="10000000-20000000">
                                        <span class="checkmark"></span>
                                    </label>
                                    <label class="container">
                                        20000000 - 40000000
                                        <input type="checkbox" class="salary-checkbox" value="20000000-40000000">
                                        <span class="checkmark"></span>
                                    </label>
                                    <label class="container">
                                        > 40000000
                                        <input type="checkbox" class="salary-checkbox" value="above-40000000">
                                        <span class="checkmark"></span>
                                    </label>
                                </div>
                                <!-- select-Categories End -->
                            </div>
                            <!-- Range Slider End -->
                        </div>
                        <!-- single one -->
                        <div class="single-listing">


                            <!--  Select job items End-->
                            <!-- select-Categories start -->
                            <div class="select-Categories pt-80 pb-50">
                                <div class="small-section-tittle2">
                                    <h4>Job Type</h4>
                                </div>
                                <label class="container">
                                    Full Time
                                    <input type="checkbox" class="jobtype-checkbox" value="Full Time">
                                    <span class="checkmark"></span>
                                </label>
                                <label class="container">
                                    Part Time
                                    <input type="checkbox" class="jobtype-checkbox" value="Part Time">
                                    <span class="checkmark"></span>
                                </label>
                                <label class="container">
                                    Remote
                                    <input type="checkbox" class="jobtype-checkbox" value="Remote">
                                    <span class="checkmark"></span>
                                </label>
                                <label class="container">
                                    Freelance
                                    <input type="checkbox" class="jobtype-checkbox" value="Freelance">
                                    <span class="checkmark"></span>
                                </label>
                            </div>
                            <!-- select-Categories End -->
                        </div>


                    </div>
                    <!-- Job Category Listing End -->
                </div>
                <!-- Right content -->
                <div class="col-xl-9 col-lg-9 col-md-8">
                    <!-- Featured_job_start -->
                    <section class="featured-job-area">
                        <div class="container">
                            <!-- Count of Job list Start -->
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="count-job mb-35">
                                        <span>@ViewBag.countJobs Jobs found</span>
                                        <!-- Select job items start -->
                                        
                                        <!--  Select job items End-->
                                    </div>
                                </div>
                            </div>
                            <!-- Count of Job list End -->
                            <!-- single-job-content -->
                            @foreach (var item in ViewBag.jobs)
                            {
                                <div class="single-job-items mb-30" data-type="@item.Type" data-salary="@item.Offer">
                                    <div class="job-items">
                                        <div class="company-img">
                                            <a href="job_details.html"><img style="width:70px; height: 70px" src="~/Img/@item.tbl_Company.Avt" alt=""></a>
                                        </div>
                                        <div class="job-tittle">
                                            <a href="@Url.Action("JobDetail", "Job", new {id = item.ID})"><h4>@item.Name</h4></a>
                                            <ul>
                                                <li>@item.tbl_Company.Name</li>
                                                <li><i class="fas fa-map-marker-alt"></i>@item.Location</li>
                                                <li>@item.Offer </li> <!-- Assuming this is the salary field -->
                                                <li>@item.Type </li>
                                            </ul>
                                        </div>
                                    </div>
                                    <div class="items-link f-right">
                                        <a href="@Url.Action("JobDetail", "Job", new {id = item.ID})">@item.Type</a>
                                        <span>@item.CreationDate.Date.ToString("dd/MM/yyyy")</span>
                                    </div>
                                </div>
                            }

                        </div>
                    </section>
                    <!-- Featured_job_end -->
                </div>
            </div>
        </div>
    </div>
    <!-- Job List Area End -->
    <!--Pagination Start  -->
    <div class="pagination-area pb-115 text-center">
        <div class="container">
            <div class="row">
                <div class="col-xl-12">
                    <div class="single-wrap d-flex justify-content-center">
                        <nav aria-label="Page navigation example">
                            <ul class="pagination justify-content-start">
                                <li class="page-item active"><a class="page-link" href="#">01</a></li>
                                <li class="page-item"><a class="page-link" href="#">02</a></li>
                                <li class="page-item"><a class="page-link" href="#">03</a></li>
                                <li class="page-item"><a class="page-link" href="#"><span class="ti-angle-right"></span></a></li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--Pagination End  -->

</main>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        // Get all job listings
        const jobItems = document.querySelectorAll('.single-job-items');

        // Get checkboxes for job type and salary range
        const jobTypeCheckboxes = document.querySelectorAll('.jobtype-checkbox');
        const salaryCheckboxes = document.querySelectorAll('.salary-checkbox');

        // Add event listeners to each checkbox
        jobTypeCheckboxes.forEach(function (checkbox) {
            checkbox.addEventListener('change', applyFilters);
        });

        salaryCheckboxes.forEach(function (checkbox) {
            checkbox.addEventListener('change', applyFilters);
        });

        function applyFilters() {
            // Collect selected job types
            const selectedTypes = Array.from(jobTypeCheckboxes)
                .filter(checkbox => checkbox.checked)
                .map(checkbox => checkbox.value.toLowerCase());

            // Collect selected salary ranges
            const selectedSalaries = Array.from(salaryCheckboxes)
                .filter(checkbox => checkbox.checked)
                .map(checkbox => checkbox.value);

            // Loop through each job item
            jobItems.forEach(function (job) {
                const jobType = job.getAttribute('data-type').toLowerCase();
                const salary = parseInt(job.getAttribute('data-salary'));

                let matchesType = selectedTypes.length === 0 || selectedTypes.includes(jobType);
                let matchesSalary = checkSalary(salary, selectedSalaries);

                if (matchesType && matchesSalary) {
                    job.style.display = '';  // Show job
                } else {
                    job.style.display = 'none';  // Hide job
                }
            });
        }

        function checkSalary(salary, selectedRanges) {
            if (selectedRanges.length === 0) return true; // No salary filter applied

            for (const range of selectedRanges) {
                if (range === 'below-10000000' && salary < 10000000) return true;
                if (range === '10000000-20000000' && salary >= 10000000 && salary <= 20000000) return true;
                if (range === '20000000-40000000' && salary >= 20000000 && salary <= 40000000) return true;
                if (range === 'above-40000000' && salary > 40000000) return true;
            }
            return false;
        }

        // Initial filter application on page load
        applyFilters();
    });
</script>
