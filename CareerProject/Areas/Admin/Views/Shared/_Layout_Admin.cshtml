
@{
    Layout = null;
    var session = Session["USER_SESSION"] as CareerProject.Common.UserLogin;

}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Career Project</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Favicon -->
    <link href="img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&family=Roboto:wght@500;700&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/Areas/Admin/Assets2/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="~/Areas/Admin/Assets2/lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/Areas/Admin/Assets2/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="~/Areas/Admin/Assets2/css/style.css" rel="stylesheet">
    <style>
        input {
            border: 1px solid !important;
        }
    </style>
</head>

<body>
    <div class="container-fluid position-relative d-flex p-0">
        <!-- Spinner Start -->
        <div id="spinner" class="show bg-dark position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
            <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div>
        <!-- Spinner End -->
        <!-- Sidebar Start -->
        <div class="sidebar pe-4 pb-3">
            <nav class="navbar bg-secondary navbar-dark">
                <a class="navbar-brand mx-4 mb-3">
                    <h3 class="text-primary"><i class="fa fa-user-edit me-2"></i>Career</h3>
                </a>
                <div class="d-flex align-items-center ms-4 mb-4">
                    <div class="position-relative">
                        <img class="rounded-circle" src="~/Areas/Admin/Assets2/img/user.jpg" alt="" style="width: 40px; height: 40px;">
                        <div class="bg-success rounded-circle border border-2 border-white position-absolute end-0 bottom-0 p-1"></div>
                    </div>
                    <div class="ms-3">
                        <h6 class="mb-0">@session.TenKhachHang</h6>
                        <span>@session.Role</span>
                    </div>
                </div>
                <div class="navbar-nav w-100">
                    @if (session != null)
                    {
                        if (session.Role == "Admin")
                        {
                            <a href="@Url.Action("Index", "Company" )" class="nav-item nav-link active"><i class="fa fa-tachometer-alt me-2"></i>Manage Company</a>
                            <div class="nav-item dropdown">
                                <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown"><i class="fa fa-th me-2"></i>Manage</a>
                                <div class="dropdown-menu bg-transparent border-0">
                                    <a href="@Url.Action("Index", "User" )" class="dropdown-item">User</a>
                                    <a href="@Url.Action("Index", "Category" )" class="dropdown-item">Category</a>
                                    <a href="@Url.Action("Index", "News" )" class="dropdown-item">News</a>
                                </div>
                            </div>
                        }
                        else
                        {
                            <a href="@Url.Action("Index", "Apply" )" class="nav-item nav-link active"><i class="fa fa-tachometer-alt me-2"></i>Applied</a>
                            <div class="nav-item dropdown">
                                <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown"><i class="fa fa-th me-2"></i>Manage</a>
                                <div class="dropdown-menu bg-transparent border-0">
                                    <a href="@Url.Action("Index", "Company" )" class="dropdown-item">Company Info</a>
                                    <a href="@Url.Action("Index", "Job" )" class="dropdown-item">Job</a>
                                </div>
                            </div>
                        }

                        <a href="@Url.Action("Logout", "Home" )" class="nav-item nav-link active"><i class="fa fa-tachometer-alt me-2"></i>Logout</a>
                    }

                    <style>
                        .table {
                            --bs-table-bg: rgba(0, 0, 0, 0);
                            --bs-table-striped-color: #fff;
                            --bs-table-striped-bg: rgba(0, 0, 0, 0.05);
                            --bs-table-active-color: #6C7293;
                            --bs-table-active-bg: rgba(0, 0, 0, 0.1);
                            --bs-table-hover-color: #6C7293;
                            --bs-table-hover-bg: rgba(0, 0, 0, 0.075);
                            width: 100%;
                            margin-bottom: 1rem;
                            color: #fff;
                            vertical-align: top;
                            border-color: #000;
                        }
                    </style>

                </div>
            </nav>
        </div>
        <!-- Sidebar End -->
        <!-- Content Start -->
        <div class="content">  @RenderBody()</div>
        <!-- Content End -->
        <!-- Back to Top -->
        <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
    </div>
    

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap4.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/Areas/Admin/Assets2/lib/chart/chart.min.js"></script>
    <script src="~/Areas/Admin/Assets2/lib/easing/easing.min.js"></script>
    <script src="~/Areas/Admin/Assets2/lib/waypoints/waypoints.min.js"></script>
    <script src="~/Areas/Admin/Assets2/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="~/Areas/Admin/Assets2/lib/tempusdominus/js/moment.min.js"></script>
    <script src="~/Areas/Admin/Assets2/lib/tempusdominus/js/moment-timezone.min.js"></script>
    <script src="~/Areas/Admin/Assets2/lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>
    <script src="~/Areas/Admin/Assets2/js/tabledata.js"></script>
    <!-- Template Javascript -->
    <script src="~/Areas/Admin/Assets2/js/main.js"></script>
</body>

</html>