
@{
    ViewBag.Title = "Add";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}

<script src="~/ckeditor/ckeditor.js"></script>
<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <div class="card-title">Add New News</div>
            <hr>
            <form action="@Url.Action("Add", "News")" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="title">Title</label>
                    <input type="text" class="form-control form-control-rounded" name="Title" id="Title"
                           placeholder="Enter news title" required>
                </div>

                <div class="form-group">
                    <label for="content">Content</label>
                    <textarea class="form-control form-control-rounded" name="Content" id="Content"
                              placeholder="Enter news content" required></textarea>
                </div>

                <div class="form-group">
                    <label for="creationDate">Creation Date</label>
                    <input type="date" class="form-control form-control-rounded" name="CreationDate" id="CreationDate" required>
                </div>

                <div class="form-group">
                    <label for="image">Image URL</label>
                    <input type="file" class="form-control form-control-rounded" name="Image" id="Image" required>

                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-light btn-round px-5"><i class="icon-lock"></i> Add News</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    CKEDITOR.replace('Content');
</script>
