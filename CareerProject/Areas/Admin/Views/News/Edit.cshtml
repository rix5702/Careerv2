
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}

@model CareerProject.Models.DTO.tlb_news
<script src="~/ckeditor/ckeditor.js"></script>

<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <div class="card-title">Edit News</div>
            <hr>
            <form action="@Url.Action("Edit", "News")" method="post" enctype="multipart/form-data">
                <input type="hidden" name="id" value="@ViewBag.info.IDnews" />

                <div class="form-group">
                    <label for="title">Title</label>
                    <input type="text" class="form-control form-control-rounded" id="title" name="title" value="@ViewBag.info.Title" placeholder="Enter news title" required>
                </div>

                <div class="form-group">
                    <label for="creationDate">Creation Date</label>
                    <input type="date" class="form-control form-control-rounded" id="creationDate" name="creationDate" value="@ViewBag.info.CreationDate.ToString("yyyy-MM-dd")" required>
                </div>

                <div class="form-group">
                    <label for="content">Content</label>
                    <textarea class="form-control form-control-rounded" id="content" name="content" placeholder="Enter news content" required>@ViewBag.info.Content</textarea>
                </div>
                <script>CKEDITOR.replace("content");</script>

                <div class="form-group">
                    <label for="image">Image URL</label>
                    <input type="file" class="form-control form-control-rounded" id="image" name="image" value="@ViewBag.info.Image" placeholder="Enter image URL">
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-light btn-round px-5"><i class="icon-lock"></i> Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    CKEDITOR.replace('content');
</script>
