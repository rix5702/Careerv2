
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}

@model CareerProject.Models.DTO.tbl_Job
<script src="~/ckeditor/ckeditor.js"></script>

<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <div class="card-title">Edit Job</div>
            <hr>
            <form action="@Url.Action("Edit", "Job")" method="post" enctype="multipart/form-data">
                <input type="hidden" name="id" value="@ViewBag.info.ID" />

                <div class="form-group">
                    <label for="name">Job Name</label>
                    <input type="text" class="form-control form-control-rounded" id="name" name="name" value="@ViewBag.info.Name" placeholder="Enter job name" required>
                </div>

                <div class="form-group">
                    <label for="detail">Detail</label>
                    <textarea class="form-control form-control-rounded" id="detail" name="detail" placeholder="Enter job detail" required>@ViewBag.info.Detail</textarea>
                </div>
                <script>CKEDITOR.replace("detail");</script>

                <div class="form-group">
                    <label for="idCompany">Company ID</label>
                    <input type="number" class="form-control form-control-rounded" id="idCompany" name="idCompany" value="@ViewBag.info.IDCompany" placeholder="Enter company ID" required>
                </div>

                <div class="form-group">
                    <label for="requirement">Requirement</label>
                    <textarea class="form-control form-control-rounded" id="requirement" name="requirement" placeholder="Enter job Requirement" required>@ViewBag.info.Requirement</textarea>
                </div>
                <script>CKEDITOR.replace("requirement");</script>
                <div class="form-group">
                    <label for="requirement">Description</label>
                    <textarea class="form-control form-control-rounded" id="description" name="description" placeholder="Enter job Description" required>@ViewBag.info.Description</textarea>
                </div>
                <script>CKEDITOR.replace("description");</script>

                <div class="form-group">
                    <label for="benefit">Benefit</label>
                    <textarea class="form-control form-control-rounded" id="benefit" name="benefit" placeholder="Enter job benefits">@ViewBag.info.Benefit</textarea>
                </div>
                <script>CKEDITOR.replace("benefit");</script>

                <div class="form-group">
                    <label for="offer">Offer</label>
                    <input type="number" step="0.01" class="form-control form-control-rounded" id="offer" name="offer" value="@ViewBag.info.Offer" placeholder="Enter job offer" required>
                </div>


                <div class="form-group">
                    <label for="industry">Industry</label>
                    <input type="text" class="form-control form-control-rounded" id="industry" name="industry" value="@ViewBag.info.Industry" placeholder="Enter industry" required>
                </div>

                <div class="form-group">
                    <label for="creationDate">Creation Date</label>
                    <input type="date" class="form-control form-control-rounded" id="creationDate" name="creationDate" value="@ViewBag.info.CreationDate.ToString("yyyy-MM-dd")" required>
                </div>

                <div class="form-group">
                    <label for="limitDate">Limit Date</label>
                    <input type="date" class="form-control form-control-rounded" id="limitDate" name="limitDate" value="@ViewBag.info.LimitDate.ToString("yyyy-MM-dd")" required>
                </div>

                <div class="form-group">
                    <label for="total">Total</label>
                    <input type="number" class="form-control form-control-rounded" id="total" name="total" value="@ViewBag.info.Total" placeholder="Enter total number of positions" required>
                </div>

                <div class="form-group">
                    <label for="type">Type</label>
                    <input type="text" class="form-control form-control-rounded" id="type" name="type" value="@ViewBag.info.Type" placeholder="Enter job type" required>
                </div>

                <div class="form-group">
                    <label for="sex">Sex</label>
                    <input type="text" class="form-control form-control-rounded" id="sex" name="sex" value="@ViewBag.info.Sex" placeholder="Enter preferred sex" required>
                </div>

                <div class="form-group">
                    <label for="location">Location</label>
                    <input type="text" class="form-control form-control-rounded" id="location" name="location" value="@ViewBag.info.Location" placeholder="Enter job location" required>
                </div>

                <div class="form-group">
                    <label for="idCategory">Category </label>
                    <select class="form-control form-control-rounded" name="IDCategory" id="IDCategory">
                        <option disabled value="@ViewBag.info.IDCategory">@ViewBag.info.Name</option>

                        @foreach (var category in ViewBag.IDCategory)
                        {
                            <option value="@category.ID">@category.Name</option>
                        }
                    </select>

                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-light btn-round px-5"><i class="icon-lock"></i> Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    CKEDITOR.replace('Detail');
    CKEDITOR.replace('Requirement');
    CKEDITOR.replace('Description');
    CKEDITOR.replace('Benefit');
</script>
