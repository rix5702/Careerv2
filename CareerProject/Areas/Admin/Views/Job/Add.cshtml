
@{
    ViewBag.Title = "Add";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}

<script src="~/ckeditor/ckeditor.js"></script>
<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <div class="card-title">Add New Job</div>
            <hr>
            <form action="@Url.Action("Add", "Job")" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="input-1">Job Name</label>
                    <input type="text" class="form-control form-control-rounded" name="Name" id="Name"
                           placeholder="Enter job name">
                </div>

                <div class="form-group">
                    <label for="input-2">Details</label>
                    <textarea class="form-control form-control-rounded" name="Detail" id="Detail" placeholder="Enter job details"></textarea>
                </div>

                <div class="form-group">
                    <label for="input-4">Requirement</label>
                    <textarea class="form-control form-control-rounded" name="Requirement" id="Requirement"
                              placeholder="Enter job requirements"></textarea>
                </div>

                <div class="form-group">
                    <label for="input-5">Description</label>
                    <textarea class="form-control form-control-rounded" name="Description" id="Description"
                              placeholder="Enter job description"></textarea>
                </div>

                <div class="form-group">
                    <label for="input-6">Benefits</label>
                    <textarea class="form-control form-control-rounded" name="Benefit" id="Benefit"
                              placeholder="Enter job benefits"></textarea>
                </div>

                <div class="form-group">
                    <label for="input-7">Offer</label>
                    <input type="text" class="form-control form-control-rounded" name="Offer" id="Offer"
                           placeholder="Enter job offer details">
                </div>

                <div class="form-group">
                    <label for="input-8">Industry</label>
                    <input type="text" class="form-control form-control-rounded" name="Industry" id="Industry"
                           placeholder="Enter industry type">
                </div>

                <div class="form-group">
                    <label for="input-9">Creation Date</label>
                    <input type="date" class="form-control form-control-rounded" name="CreationDate" id="CreationDate">
                </div>

                <div class="form-group">
                    <label for="input-10">Application Deadline</label>
                    <input type="date" class="form-control form-control-rounded" name="LimitDate" id="LimitDate">
                </div>

                <div class="form-group">
                    <label for="input-11">Total Positions</label>
                    <input type="number" class="form-control form-control-rounded" name="Total" id="Total"
                           placeholder="Enter the number of positions">
                </div>

                <div class="form-group">
                    <label for="input-12">Job Type</label>
                    <input type="text" class="form-control form-control-rounded" name="Type" id="Type"
                           placeholder="Enter job type (e.g., Full-time, Part-time)">
                </div>

                <div class="form-group">
                    <label for="input-13">Preferred Gender</label>
                    <select class="form-control form-control-rounded" name="Sex" id="Sex">
                        <option value="Any">Any</option>
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="input-14">Location</label>
                    <input type="text" class="form-control form-control-rounded" name="Location" id="Location"
                           placeholder="Enter job location">
                </div>

                <div class="form-group">
                    <label for="input-15">Job Category</label>
                    <select class="form-control form-control-rounded" name="IDCategory" id="IDCategory">
                        @foreach (var category in ViewBag.IDCategory)
                        {
                            <option value="@category.ID">@category.Name</option>
                        }
                    </select>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-light btn-round px-5"><i class="icon-lock"></i> Add Job</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    CKEDITOR.replace('Detail');
    CKEDITOR.replace('Requirement');
    CKEDITOR.replace('Description');
    CKEDITOR.replace('Benefit');
</script>
